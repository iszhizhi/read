.container {
  padding: 20rpx;
}

input{
  text-align: center;
}

.userInfo {
  display: flex;
  align-items: center;
}

.avatar-url {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}

.nick-name {
  padding-left: 10rpx;
}

.content {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

input {
  margin-left: 10rpx;
}

.picker {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12px;
  margin-top: 10rpx;
}

.read {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}

