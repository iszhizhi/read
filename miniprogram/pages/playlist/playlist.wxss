/* miniprogram/pages/playlist/playlist.wxss */

page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.send {
  background:#86c166;
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.comment-content {
  width: 560rpx;
  text-align: left;
  padding: 20rpx;
  font-size: 32rpx;
}

.date {
  padding-top:80rpx;
  padding-bottom: 20rpx;
  width: 100%;
  padding-left: 50rpx;
}

.content {
  margin-top: 10vh;
  display: flex;
  justify-content: center;
  align-content: center;
  text-align: center;
}

.move text {
  font-family: 'SimHei';
}

.center{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 55%;
  padding: 0 50rpx;
}

.content-detail {
  line-height: 80rpx;
  font-family: 'FangSong';
  font-size: 40rpx;
}

.title-image {
  width: 100%;
  height: 422rpx;
  margin-top: 20rpx;
}

.move {
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding-bottom: 8vh;
}

.icons {
  margin-right: 20rpx;
}

.first-icons {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-top: 6vh;
  height: 100rpx;
}

.bottom {
  padding-left: 50rpx;
  padding-right: 50rpx;
  padding-bottom: 13vh;
}

.bottom-button{
  margin-top: 5vh;
}

.share-btn {
  background-color: #fff;
  color: rgba(40, 47, 60, 0.8);
  padding: 0;
  height: 100%;
  border: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.share-btn::after {
  display: none;
}

.share-hover::after {
  border: 0;
}