/* components/recommend-card/recommend-card.wxss */

.container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 45%;
  height: 420rpx;
  align-items: center;
  border-radius: 15px;
  margin: 40rpx 19rpx 10rpx;
}


image {
  
  width: 100%;
}

.top {
  height: 70rpx;
  display: flex;
  width: 100%;
  align-items: center;
  flex-direction: row;
}

.title{
  background-color: #f1f1f1;
  text-align: center;
  font-weight: 300;
  margin-left: 30rpx;
}

.title text{
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}

.content {
  flex-direction: column;
  flex-grow: 1;
  display: flex;
  
  align-items: center;
  width: 100%;
}

.item-content {
  font-size: 12px;
  font-weight: 300;
  margin-top: 35rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.like{
  margin-left: 100rpx;
  position: relative;
}

.like text{
  position: absolute;
  top: -15rpx;
  right: 0;
}

.like image{
  margin-right: 20rpx;
}